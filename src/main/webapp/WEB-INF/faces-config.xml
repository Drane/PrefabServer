<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.prefabsoft.jsf.util.message</base-name>
			<var>msg</var>
		</resource-bundle>
		<!-- http://www.mkyong.com/jsf2/jsf-2-0-and-resource-bundles-example/ -->
		<resource-bundle>
			<base-name>com.prefabsoft.jsf.util.appBundle</base-name>
			<var>msgbundle</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>com.prefabsoft.jsf.util.appBundleJunior</base-name>
			<var>juniormsgbundle</var>
		</resource-bundle>
	</application>

</faces-config>
